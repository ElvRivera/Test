<div class="container p-5">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>SignUp</h3>
        </div>
        <div class="card-body">
          <form action="/signup" method="POST">
            <div class="form-group">
              <input type="text" name="username" placeholder="Username" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <input type="email" name="email" placeholder="Email" class="form-control">
            </div>
            <div class="form-group">
              <input type="type" name="fullname" placeholder="Full Name" class="form-control">
            </div>
            <div class="form-group">
              <input type="password" name="password" placeholder="Password" class="form-control">
            </div>
            <div class="form-group">
              <fieldset>
                  <legend>User Type?</legend>
                  <ul>
                    <li>
                      <label for="admin">Administrator</label>
                      <input type="radio" id="admin" name="usertype" value="Administrator" checked>
                    </li>
                    <li>
                      <label for="employe">Employe</label>
                      <input type="radio" id="employe" name="usertype" value="Employe">
                    </li>
                  </ul>
                  </fieldset>
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block">
                SingIn
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>